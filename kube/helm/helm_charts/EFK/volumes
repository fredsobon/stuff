---
apiVersion: v1
kind: PersistentVolume
metadata:
  name: elk-master-0
  labels:
    app: elasticsearch-master
    type: local
spec:
  capacity:
    storage: 5Gi
  accessModes:
    - ReadWriteOnce
  hostPath:
    path: "/usr/share/elasticsearch/data"
