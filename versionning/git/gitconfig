# exemple de .gitconfig  à mettre dans notre home : 

[user]
	email = lapin@mapin.com
	name = lapin
[diff]
    tool = meld
[core]
  editor = vim
[alias]
  fa = fetch -a --prune
  co = checkout
  br = branch
  ci = commit
  st = status
  hist = log --oneline --graph
  save = !git add -A && git commit -m 'SAVEPOINT'
  undo = reset HEAD~1 --mixed
[pull]
  rebase = true

